<Window x:Class="NosSeusPesWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NosSeusPesWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
        <TextBlock Text="Calçados NosSeusPes" FontSize="72" Margin="0,100"></TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="ButtonSapatos" Click="ButtonSapatos_Click" Content="SAPATOS" Margin="10" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="ButtonClientes" Click="ButtonClientes_Click" Content="CLIENTES" Margin="10" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="ButtonVendas" Click="ButtonVendas_Click" Content="VENDAS" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Padding="10"/>
        </StackPanel>
    </StackPanel>
</Window>
